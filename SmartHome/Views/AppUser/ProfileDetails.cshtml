@model SignUpViewModel
@{
    ViewData["Title"] = "Profile Edit";
}
<section class="bg-section">
    <div class="container  position-relative px-3 main-container ">
        <div class="row mb-3">

            <div class="col-12 offset-sm-2 col-sm-8 offset-md-3 col-md-6 offset-xl-4 col-xl-4">
                <div class="card mb-3">
                    <div class="row g-0">
                        <div class="col-md-12">
                            <div class="card-header text-white bg-main">
                                <p class="card-text">
                                    <h5 class="card-title">
                                        @Model.FirstName  @Model.LastName
                                    </h5>
                                </p>
                            </div>
                        </div>
                        <div class="col-12 d-flex justify-content-center align-items-center mt-2">
                            <img src="~/@Model.ExistPhoto" class="user-member-img rounded-circle" alt="@Model.FirstName">
                        </div>
                        <div class="col-12">
                            <div class="card-body">
                                <p class="card-text">
                                    <strong> <span class="main-color">Email: </span>@Model.Email</strong>
                                </p>
                                <p class="card-text">
                                    <strong> <span class="main-color">Address: </span>@Model.Address</strong>
                                </p>
                                <p class="card-text">
                                    <strong> <span class="main-color">Phone: </span>@Model.PhoneNumber</strong>
                                </p>
                                <p class="card-text">
                                    <strong> <span class="main-color">Role: </span> Application/Home User</strong>
                                </p>
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="card-footer ">
                                <p class="card-text d-flex justify-content-between">
                                    <a class="btn btn-success" asp-controller="AppUser" asp-action="ProfileEdit" asp-route-id="@Model.HomeUserId">
                                        <span class="pe-2">Edit</span>
                                        <i class="fas fa-user-edit"></i>
                                    </a>
                                    <a class="btn btn-success" asp-controller="Account" asp-action="ChangePassword">
                                        <span class="pe-2">Change Password</span>
                                        <i class="fas fa-lock"></i>
                                    </a>
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        
        </div>
    </div>
</section>
