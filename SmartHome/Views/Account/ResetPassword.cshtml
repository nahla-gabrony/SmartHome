@model ResetPasswordViewModel
@{
    Layout = "_SignLayout";
    ViewData["Title"] = "Reset Password";
}
<section class="signin-section pt-5">

        <div class="row confirm-alert">
            @if (Model?.IsSuccess == true)
            {
                <div class="col-6 offset-3">
                    <div class="alert alert-success alert-dismissible fade show m-auto my-5 alert-create d-flex align-items-center" role="alert">
                        <i class="far fa-info-circle fs-4 pe-2"></i>
                        <div>
                            <span><strong>Congratulations</strong> You Change The Password successfully, </span>
                            <span>Click Here to</span>
                            <a asp-controller="Account" asp-action="SignIn" class="alert-link"><strong>Go to Sign in Page</strong></a>.
                        </div>

                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                </div>
            }
            <div class="col-6 offset-3">

                <div class="sign-container text-center text-white mb-5 px-3">
                    <h2 class="pt-4 pb-4 fw-bold">Forgot Password</h2>
                    <form method="post" asp-action="ResetPassword" class="row g-3">
                        <input asp-for="UserId" hidden>
                        <input asp-for="Token" hidden>
                        <div class="col-12">
                            <input asp-for="NewPassword" type="password" class="input-field w-100 p-2 text-white" placeholder="Please Enter Your New Password" />
                            <span asp-validation-for="NewPassword" class="input-validation"></span>
                        </div>
                        <div class="col-12">
                            <input asp-for="ConfirmPassword" type="password" class="input-field w-100 p-2 text-white" placeholder="Please Confirm Your New Password" />
                            <span asp-validation-for="ConfirmPassword" class="input-validation"></span>
                        </div>
                        <div class="col-12 justify-content-center">
                            <input type="submit" class="submit-btn text-white fs-5 mb-3" value="Change">
                        </div>

                        <div asp-validation-summary="ModelOnly"></div>

                    </form>


                </div>
            </div>

        </div>
</section>


