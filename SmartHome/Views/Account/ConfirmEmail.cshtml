@model ConfirmEmailViewModel
@{
    ViewData["Title"] = "Confirm Email";
}
<section class="bg-section">
    <div class="d-flex justify-content-center align-items-center container">
        <div class="row confirm-alert">
            @if (Model.IsVerified == true)
            {
                <div class="col-11 offset-1">
                    <div class="alert alert-success alert-dismissible fade show alert-create d-flex align-items-center " role="alert">
                        <i class="far fa-info-circle fs-4 pe-2"></i>
                        <div>
                            <span><strong>Congratulations</strong> You Confirm Your Email successfully, </span>
                            <span>Click Here to</span>
                            <a asp-controller="Account" asp-action="SignIn" class="alert-link"><strong>Sign in</strong></a>.
                        </div>
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                </div>
            }
            else
            {
                if (Model.IsSend)
                {
                    <div class="col-11 offset-1">
                        <div class="alert alert-success alert-dismissible fade show m-auto my-5 alert-create d-flex align-items-center" role="alert">
                            <i class="far fa-info-circle fs-4 pe-2"></i>
                            <div> We Send Confirm Email again. Please go to your Email To confirm your account.  </div>
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    </div>
                }
                else
                {
                    <div class="col-11 offset-1">
                        <div class="alert alert-success alert-dismissible fade show alert-create d-flex align-items-center" role="alert">
                            <i class="far fa-info-circle fs-4 pe-2"></i>
                            <div><strong>Congratulations</strong> You create new account successfully. Please go to your Email To confirm your account.  </div>
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    </div>
                }
                <div class="col-11 offset-1">
                    <div class="confirm-container text-center text-white mb-5 px-3">
                        <h2 class="pt-4 pb-4 fw-bold text-black">Confirm Email</h2>
                        <form asp-action="ConfirmEmail" class="row g-3">
                            <input asp-for="Email" hidden>
                            <div class="text-black-50">Did not get any email or deleted by mistake?</div>

                            <div asp-validation-summary="ModelOnly" class="input-validation"> </div>

                            <div class="col-12 form-group my-4">
                                <input type="submit" value="Resend Confirm Email" class="btn btn-main fs-5 mt-2 px-3 py-2">
                            </div>

                        </form>
                    </div>
                </div>
            }
        </div>
            </div>
</section>

